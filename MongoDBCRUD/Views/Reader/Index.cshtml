@model IEnumerable<MongoDBCRUD.Models.ReaderEntity>

@{
    ViewData["Title"] = "Index";
}
<style>
    button {
        border-radius: 13px;
        border-color: lightblue;
        border-style: groove;
        background-color: powderblue;
    }

        button:hover {
            background-color: lightsteelblue;
        }

    .table {
        background-image: url("https://i.pinimg.com/originals/b0/6f/fc/b06ffc2389dd2ec660480c42728cef50.jpg");
        background-size: cover;
        color: black;
    }

    a:hover {
        text-decoration: none;
    }
</style>
<h1>READER</h1>

<p>
    <a asp-action="Create">THÊM MỚI</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model._id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MADG)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TENDG)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DCHI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NGSINH)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SODT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NGDK)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item._id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MADG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TENDG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DCHI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NGSINH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SODT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NGDK)
            </td>
            <td>
           <button>     @Html.ActionLink("Edit", "Edit", new { Name = item.TENDG }) |</button>
           <button>
               @Html.ActionLink("Details", "Details", new { Name = item.TENDG }) </button>
               <button>   @Html.ActionLink("Delete", "Delete", new { Name = item.TENDG })</button>
</td>
        </tr>
}
    </tbody>
</table>
